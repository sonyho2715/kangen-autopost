# Kangen Water Facebook Auto-Post - Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================================================
# OPENAI API CONFIGURATION
# ==============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# ==============================================================================
# FACEBOOK API CONFIGURATION
# ==============================================================================
# Get your page ID and access token from: https://developers.facebook.com/
# Required permissions: pages_manage_posts, pages_read_engagement

# Your Facebook Page ID (numeric ID)
FACEBOOK_PAGE_ID=your-page-id-here

# Your Facebook Page Access Token (long-lived token recommended)
FACEBOOK_PAGE_ACCESS_TOKEN=your-page-access-token-here

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/kangen_db

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
# Redis connection URL for BullMQ job queue
REDIS_URL=redis://localhost:6379

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
# Node environment (development or production)
NODE_ENV=production

# Server port for health checks and status API
PORT=3000

# Timezone (do not change - required for Hawaii time)
TZ=Pacific/Honolulu

# Logging level (info, debug, error)
LOG_LEVEL=info
